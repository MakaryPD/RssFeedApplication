<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entity_name"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="sans-serif" android:textSize="24sp"
            android:lineSpacingExtra="8sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Created by:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entity_artist" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/entity_name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textStyle="bold"/>
    <TextView
            android:text="Summary:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entity_summary" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/entity_artist" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>
